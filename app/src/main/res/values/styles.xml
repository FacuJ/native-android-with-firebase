<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BtnSolidRed">
        <item name="android:background">@drawable/bg_button_red</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BtnSolidWhite">
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/scopic_red_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditTextLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/scopic_red_text</item>
    </style>

    <style name="TextMessageInGray">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>